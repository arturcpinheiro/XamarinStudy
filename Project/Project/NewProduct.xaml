<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.NewProduct"
             Title="Add New Product">
    <ContentPage.ToolbarItems>
        <ToolbarItem  Text="Save" Clicked="SaveBtn"/>
        <ToolbarItem  Text="Cancel" Clicked="CancelBtn"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <TableView>
                <TableRoot>
                    <TableSection Title="New Product">                        
                        <EntryCell x:Name="cellName"  Label="Product Name" Placeholder="Enter Product Name" ></EntryCell>
                        <EntryCell x:Name="cellPrice" Label="Price                " Placeholder="Enter Product Price"></EntryCell>
                        <EntryCell x:Name="cellQty"   Label="Quantity          " Placeholder="Enter Product Quantity"></EntryCell>
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>